<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models https://axelor.com/xml/ns/domain-models/domain-models_6.1.xsd">

  <module name="base" package="com.eyc.base.db" />

  <entity name="Pago" cacheable="false">
      <many-to-one name="cliente" ref="Cliente" title="Cliente" />
      <date name="fecha" nameColumn="true" title="Fecha de pago"   />
      <decimal name="monto" title="Monto de pago"  precision="12" scale="2" 
            default="0.00"  />
      <decimal name="montoOriginal" title="Monto de pago original"  precision="12" scale="2" 
            default="0.00"  />
      <boolean name="consolidado" title="Está consolidado?" default="false" />
      <string name="tipoPago" title="Tipo de pago" 
      selection="tipos.de.pago"  default="efectivo"/>

      <string name="tipoMoneda" title="Tipo de moneda"
        selection ="tipos.de.moneda" default="QUET" />
        
      <string name="numeroDocumento" title="Número de documento" />
      <entity-listener class="com.eyc.base.db.repo.PagoListener"/>

  </entity>
 
</domain-models>