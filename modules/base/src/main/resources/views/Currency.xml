<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="currency-grid" title="Currency List" 
            model="com.eyc.base.db.Currency">
     <field name="code" />
     <field name="description" />
   </grid>

  <form name="currency-form" title="Currency" 
  model="com.eyc.base.db.Currency" width="large">
    <panel title="Overview"  >
         <field name="code" colSpan="04" />
       <field name="description" colSpan="08" />
    </panel>
  </form>

  <action-view name="currency-action" title="Currency list"
          model="com.eyc.base.db.Currency">
     <view type="grid" name="currency-grid" />
     <view type="form" name="currency-form" />
  </action-view>

</object-views>
