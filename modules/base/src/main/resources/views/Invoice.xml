<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="invoice.grid" title="Invoice List" 
     orderBy="-invoiceDate"  model="com.eyc.base.db.Invoice">
    <field name="customer" />
    <field name="invoiceDate" />
    <field name="isVoid" />
    <field name="invoiceTotal" aggregate="sum" />
   </grid>

  <form name="invoice.form" title="Invoice"  model="com.eyc.base.db.Invoice"
    onNew="default-invoice-values" width="large">
    <panel title="Overview"  >
      <field name="customer" colSpan="04" widget="SuggestBox" />
      <field name="invoiceDate" colSpan="04" />
      <field name="invoiceTotal" colSpan="04" showIf="id" />
      <field name="isVoid" hidden="true" />
    </panel>
    <panel-related title="Items" field="invoiceItems" grid-view="invoice-detail.grid" 
       form-view="invoice-detail.form" />
  </form>

  <action-view name="invoice.action" title="Invoices"
          model="com.eyc.base.db.Invoice">
     <view type="grid" name="invoice.grid" />
     <view type="form" name="invoice.form" />
  </action-view>

  <action-record name="default-invoice-values" model="com.eyc.base.db.Invoice">
      <field name="invoiceDate" expr="eval: __date__"/>
      <field name="isVoid" expr="eval: false"/>
  </action-record>

</object-views>
