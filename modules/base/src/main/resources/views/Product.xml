<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="product-grid" title="Product List" 
            model="com.eyc.base.db.Product">
    <field name="category" />
    <field name="description" />
    <field name="unitPrice" />
  </grid>

  <form name="product-form" title="Product" 
  model="com.eyc.base.db.Product" width="large">

    <panel title="Overview"  >
      <field name="category" colSpan="06" widget="SuggestBox" />
      <field name="unitPrice" colSpan="06" />
      <field name="description" colSpan="09" />
      <field name="active" colSpan="03"  />
    </panel>

    <panel title="Comments"  >
      <field name="comments" colSpan="12" showTitle="false"/>
     </panel>

  </form>

  <action-view name="product-action" title="Product list"
          model="com.eyc.base.db.Product">
     <view type="grid" name="product-grid" />
     <view type="form" name="product-form" />
  </action-view>


</object-views>
